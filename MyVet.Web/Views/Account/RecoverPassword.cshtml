@model  MyVet.Web.Models.RecoverPasswordViewModel
@{
    ViewData["Title"] = "Recuperar Clave";
}

<h2>Recuperar contraseña</h2>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Recuperar clave" class="btn btn-primary" />
                <a asp-action="Login" class="btn btn-success">Regresar a Ingreso</a> 
            </div>
        </form>
        <div class="text-success">
            <p>
                @ViewBag.Message
            </p>
        </div>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

 }


